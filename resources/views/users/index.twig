{% extends 'layouts/app.twig' %}

{% block content %}

    <div class="col-lg-8 mx-auto py-4 d-flex align-items-center justify-content-between">
        <h3>Usuários Cadastrados</h3>

        <a class="btn btn-primary" href="{{ BASE_URL }}/user/create">
            Criar novo usuário
        </a>
    </div>

    {% if users is empty %}
        {# <p>Nenhum usuário cadastrado</p> #}
    {% else %}
        {% for user in users %}
            <div class="card mb-3 mx-auto col-lg-8">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title">
                            {{ user.first_name }} {{ user.last_name }}                      
                        </h5>

                        <p class="card-text">{{ user.email }}</p>
                        <p class="card-text">{{ user.birth_date }}</p>
                    </div>

                    <div>
                        <a href="{{ BASE_URL }}/user/edit/{{ user.id }}" class="btn btn-primary">Editar</a>
                        <a href="{{ BASE_URL }}/user/delete/{{ user.id }}" class="btn btn-danger">Excluir</a>
                    </div>
                </div> 
            </div>
        {% endfor %}
    {% endif %}

{% endblock %}
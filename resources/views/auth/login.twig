{% extends 'layouts/app.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
    <div class="col-lg-8 mx-auto py-4 text-center">
        <h3> Login </h3>
    </div>

    <div class="col-lg-8 mx-auto">
        <form action="{{ BASE_URL }}/auth/register" method="POST">
            <div class="form-group">
                <label for="first_name">E-mail</label>
                <input placeholder="Seu e-mail cadastrado" type="text" class="form-control" id="first_name" name="first_name" required>
            </div>

            <div class="form-group">
                <label for="last_name">Data Nascimento</label>
                <input placeholder="Data de Nascimento" type="date" class="form-control" id="last_name" name="last_name" required>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
        </form>

        <p class="text-center mt-3">
            NÃ£o tem uma conta? <a href="{{ BASE_URL }}/auth/register">Registre-se</a>
        </p>

    </div>
{% endblock %}